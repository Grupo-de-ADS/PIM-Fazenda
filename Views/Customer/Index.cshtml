@model IEnumerable<CustomerModels>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Clientes</h1>
        <a class="btn btn-success mx-2" asp-action="Create"><i class="bi bi-file-earmark-plus mx-2"></i>Cadastrar novo Cliente</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    <table id="Customer" class="table table-light table-hover mt-5">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Endereço</th>
                <th scope="col">Telefone</th>
                <th scope="col">Cliente Juridico</th>
                <th scope="col">Cpf/Cnpj</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.customer_name</td>
                        <td>@customer.customer_address</td>
                        <td>@customer.customer_phone_number</td>
                        <td>
                            @Html.DisplayFor(modelItem => customer.customer_is_juridic)
                        </td>
                        <td>@customer.customer_document</td>
                        <td>
                            <a class="btn btn-warning mx-2" asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.customer_id"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a class="btn btn-danger mx-2" asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.customer_id"><i class="bi bi-trash mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>