@model IEnumerable<TransportModels>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Automóvel</h1>
        <a class="btn btn-success mx-2" asp-action="Create"><i class="bi bi-file-earmark-plus mx-2"></i>Cadastrar novo Automóvel</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    <table id="Transport" class="table table-light table-hover mt-5">
        <thead>
            <tr>
                <th scope="col">Transportadora</th>
                <th scope="col">Nome</th>
                <th scope="col">Cpf</th>
                <th scope="col">Telefone</th>
                <th scope="col">Placa</th>
                <th scope="col">Peso Carga</th>
                <th scope="col">Tamanho Veículo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var transport in Model)
                {
                    <tr>
                        <td>@transport.sp_corporate_name</td>
                        <td>@transport.tp_responsible_name</td>
                        <td>@transport.tp_responsible_cpf</td>
                        <td>@transport.tp_responsible_phone</td>
                        <td>@transport.tp_plate</td>
                        <td>@transport.tp_weight_supported</td>
                        <td>@transport.tp_size</td>
                        <td>
                            <a class="btn btn-warning mx-2" asp-controller="Transport" asp-action="Edit" asp-route-id="@transport.tp_id"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a class="btn btn-danger mx-2" asp-controller="Transport" asp-action="Delete" asp-route-id="@transport.tp_id"><i class="bi bi-trash mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>