@model FarmModels
@{
    ViewData["title"] = "Excluir Fazenda";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Exclusão de Fazenda</h1>
    </div>

    <form method="post" asp-controller="Farm" asp-action="Delete">
        <input type="hidden" asp-for=farm_id />
        <h2 class="text-light">Tem certeza que deseja Excluir esse Fazenda?</h2>

        <div class="mb-3">
            <label for="farm_name" class="form-label text-light">Nome:</label>
            <input type="text" class="form-control text-light" asp-for="farm_name" id="farm_name" placeholder="Ex:Nome" disabled>
            <span asp-validation-for="farm_name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="farm_uf" class="form-label text-light">UF:</label>
            <input type="text" class="form-control text-light" asp-for="farm_uf" id="farm_uf" placeholder="Ex:SP" disabled>
            <span class="text-danger" asp-validation-for="farm_uf"></span>
        </div>

        <div class="mb-3">
            <label for="farm_city" class="form-label text-light">Cidade:</label>
            <input type="text" class="form-control text-light" asp-for="farm_city" id="farm_city" placeholder="Ex:São Paulo" disabled>
            <span class="text-danger" asp-validation-for="farm_city"></span>
        </div>

        <div class="mb-3">
            <label for="farm_distric" class="form-label text-light">Cidade:</label>
            <input type="text" class="form-control text-light" asp-for="farm_distric" id="farm_city" placeholder="Ex:2024/02/28" disabled>
            <span class="text-danger" asp-validation-for="farm_distric"></span>
        </div>

        <div class="mb-3">
            <label for="farm_address" class="form-label text-light">Endereço:</label>
            <input type="text" class="form-control text-light" asp-for="farm_address" id="farm_address" placeholder="Ex:2025/02/28" disabled>
            <span class="text-danger" asp-validation-for="farm_address"></span>
        </div>

        <div class="d-flex gap-5 nt-5">
            <button type="submit" class="btn btn-success w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-action="Index">Voltar</a>
        </div>
    </form>

</div>
