@model IEnumerable<ProdutosModels>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5"> 
        <h1>Produtos</h1>
        <a class="btn btn-success mx-2" asp-action="Create"><i class="bi bi-file-earmark-plus mx-2"></i>Cadastrar novo produto</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    <table id="Produto" class="table table-light table-hover mt-5">
        <thead>
            <tr>
                <th scope="col">Código Ean</th>
                <th scope="col">Produto</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Data de Fabricação</th>
                <th scope="col">Data de Vencimento</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if(Model != null)
            {
                @foreach (var produtos in Model)
                {
                    <tr>
                        <td>@produtos.Product_ean_code</td>
                        <td>@produtos.Product_name</td>
                        <td>@produtos.Product_quantity</td>
                        <td>@produtos.Product_fabrication_date</td>
                        <td>@produtos.Product_expiry_date</td>
                        <td>
                            <a class="btn btn-warning mx-2" asp-controller="Produtos" asp-action="Edit" asp-route-id="@produtos.Id"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a class="btn btn-danger mx-2" asp-controller="Produtos" asp-action="Delete" asp-route-id="@produtos.Id"><i class="bi bi-trash mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>